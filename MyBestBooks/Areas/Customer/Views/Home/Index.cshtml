@model IEnumerable<Product>

<div class="row pb-3">
	@foreach (var product in Model)
	{
		<div class="col-lg-3 col-sm-6" >
			 @* class of column large 3 and column small 6 -- bootstrap classes *@
			<div class="row p-2" >
				<div class="col-12 p-1" >

					<div class="card border-5 p-4 m-2 shadow border-top rounded" style="width: 100%; height: 550px;">
						<a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary " style="height: 100%;">
							@* bootstrap card layout where i give a class of card padding 3  *@
						  <img src="@product.ImageUrl" class="card-img-top rounded" style="width: 100%; height: 300px;" />
						  <div class="card-body pb-0"> @* padding buttom of 0 *@
							<div class="pl-1"> @* padding left of 1 *@
								<p class="card-title h5 text-white opacity-75 text-uppercase text-center">@product.Title</p>
								<p class="card-title text-warning text-center">by <b>@product.Author</b></p>
							 </div>
							<div class="pl-1">
								<p class="text-white text-opacity-75 text-center mb-0">List Price:
									<span class="text-decoration-line-through">
										@product.ListPrice.ToString("c")
									</span>
								</p>
							</div>
							<div class="pl-1">
								<p class="text-white text-opacity-75 text-center">As low as: 
									<span>
										@product.Price100.ToString("c")
									</span>
								</p>
							</div>
							</div>
						</a>
                        
				
					</div>
				</div>
			</div>
		</div>
	}
</div>
